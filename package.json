{
  "name": "obsidian-writeaid-plugin",
  "version": "0.1.0",
  "description": "A novel writing plugin for Obsidian supporting multiple drafts per project.",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp manifest.json dist/",
    "dev:watch": "node ./scripts/dev-watch.js",
    "dev:copy": "node ./scripts/dev-watch.js --once",
    "format": "prettier --write . --ignore-path .prettierignore",
    "lint": "pnpm exec eslint . --ext .ts,.svelte",
    "test": "pnpm build && node ./scripts/verify-manifest-commands.js"
  },
  "keywords": [
    "obsidian-plugin",
    "writing",
    "novel",
    "drafts"
  ],
  "author": "Julian Stephens<julian@julianstephens.net>",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "builtin-modules": "^5.0.0",
    "css-loader": "^6.11.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "obsidian": "^1.10.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "style-loader": "^3.3.4",
    "svelte": "^4.2.20",
    "svelte-eslint-parser": "^1.3.3",
    "svelte-preprocess": "^6.0.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "jszip": "^3.10.1",
    "lucide-svelte": "^0.546.0"
  }
}
